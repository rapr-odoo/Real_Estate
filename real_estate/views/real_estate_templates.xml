<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hello_fvworld" name="Hello World">
        <h4><strong>Hello World</strong></h4>
    </template>

    <template id="clients_list">
        <div><t t-out="AdditionalData"/></div>
        <div class="table">
            <table>
                <thead>
                    <th>Sequence</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>State</th>
                </thead>
                <tbody>
                    <t t-set="sequence" t-value="0"/>
                    <t t-foreach="clients" t-as="client">
                        <t t-set="sequence" t-value="sequence + 1"/>
                        <!-- <tr t-att-class="sequence % 2 == 0 and 'o_even' or ''"> -->
                        <tr t-attf-style="font-weight: bold;#{sequence % 2 == 0 and 'background: grey;' or ''}">
                            <td><t t-out="sequence" /></td>
                            <td><span t-field="client.user_id" /></td>
                            <td>
                                <t t-if="client.property_ids[0].description" t-out="client.property_ids[0].description" />
                                <t t-else="">No Description Available</t>
                            </td>
                            <td><span t-field="client.property_ids[0].state"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </template>

    <template id="hello_user" name="Template User">
        <h4><strong>Hello <t t-out="user.name"/></strong></h4>
        <t t-call="real_estate.clients_list">
            <t t-set="AdditionalData">Hello</t>
        </t>
    </template>

    <template id="clients_static" name="Clients">
        <t t-call="website.layout">
            <div class="container">
                <div class="text-center font-weight-bold">Hello World</div>
            </div>
        </t>
    </template>

    <template id="clients" name="Clients">
        <t t-call="website.layout">
            <div class="container">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <th>Sequence</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>State</th>
                        </thead>
                        <tbody>
                            <t t-set="sequence" t-value="0"/>
                            <t t-foreach="clients" t-as="client">
                                <t t-set="sequence" t-value="sequence + 1"/>
                                <!-- <tr t-att-class="sequence % 2 == 0 and 'o_even' or ''"> -->
                                <tr t-attf-style="#{sequence % 2 == 0 and 'background: grey;' or ''}">
                                    <td><t t-out="sequence" /></td>
                                    <td>
                                        <a t-attf-href="/client/#{client.id}">
                                            <span t-field="client.user_id" />
                                        </a>
                                    </td>
                                    <td>
                                        <t t-if="client.property_ids[0].description" t-out="client.property_ids[0].description" />
                                        <t t-else="">No Description Available</t>
                                    </td>
                                    <td><span t-field="client.property_ids[0].state"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>


    <template id="client_details" name="client_details">
        <div t-call="website.layout">
            <div class="container">
                <div class="row">
                    <div class="col-4">
                        <div t-attf-style="padding-top: 50%; background-image: url(/web/image/client.client/#{client.id}/image_1024); background-size: cover; background-position:center"/>
                        <div>
                            <div>State of the Client</div>
                            <div t-field="client.property_ids[0].state"/>
                        </div>
                    </div>
                    <div class="col-8 o_client_details">
                        <div class="text-center font-weight-bold"><span t-field="client.user_id"/></div>
                    </div>
                </div>
            </div>
        </div>        
    </template>

    <template id="client_description" name="Client Description" inherit_id="real_estate.client_details" customize_show="True">
        <xpath expr="//div[contains(@class, 'o_client_details')]" position="inside">
            <div t-field="client.property_ids[0].description"></div>
        </xpath>
    </template>

</odoo>